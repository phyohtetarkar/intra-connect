<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GenZConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_500</item>
        <item name="colorPrimaryVariant">@color/custom_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GenZConnect.NoActionBar" parent="Theme.GenZConnect">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.GenZConnect.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark">

    </style>

    <style name="ShapeAppearanceOverlay.MessageReceive.MaterialCardView.Rounded" parent="">
        <item name="cornerSizeBottomRight">@dimen/chat_bubble_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/chat_bubble_radius</item>
        <item name="cornerSizeTopRight">@dimen/chat_bubble_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.MessageSend.MaterialCardView.Rounded" parent="">
        <item name="cornerSizeBottomLeft">@dimen/chat_bubble_radius</item>
        <item name="cornerSizeTopLeft">@dimen/chat_bubble_radius</item>
        <item name="cornerSizeBottomRight">@dimen/chat_bubble_radius</item>
    </style>
</resources>